        def draw_quit(self):
            text = pygame.font.Font('D:\Prog\The runner\Font\\blood_lust\BloodLust.ttf', 36)
            button_rect_quit = pygame.Rect(self.x, self.y, self.text_rect.width + 10, self.text_rect.height + 10)
